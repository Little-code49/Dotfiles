{
  "layer": "top",
  "height": 20,
  "margin-top": 10,
  "margin-left": 10,
  "margin-bottom": 0,
  "margin-right": 10,
  "spacing": 0,
  "modules-left": [
    "custom/launcher",
    "custom/fillerright",
    "custom/fillerleft",
    "cpu",
    "custom/fillerright",
    "custom/fillerleft",
    "memory",
    "custom/fillerright",
    "custom/fillerleft",
    "temperature",
    "custom/fillerright",
    "custom/fillerleft",
    "group/playerctl",
    "custom/fillerright",
    "custom/fillerleft",
    "disk",
    "custom/fillerright",
    "custom/fillerleft",
    "custom/uptime",
    "custom/fillerright"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    //Uncomment if u have a battery
    //"custom/fillerleft",
    //"battery",
    /*"custom/fillerright",*/ "custom/fillerleft",
    "group/pkg",
    "custom/fillerright",
    "custom/fillerleft",
    "custom/weather",
    "custom/fillerright",
    "custom/fillerleft",
    "backlight",
    "custom/fillerright",
    "custom/fillerleft",
    "pulseaudio",
    "custom/fillerright",
    "custom/fillerleft",
    "network",
    "custom/fillerright",
    "custom/fillerleft",
    "custom/date",
    "custom/fillerright",
    "custom/fillerleft",
    "custom/clock"
  ],
  "hyprland/workspaces": {
    "all-outputs": true,
    "active-only": false,
    "format": "{icon}",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "persistent-workspaces": {
      "*": 15
    },
    "format-icons": {
      "1": "ü≠Ö",
      "2": "1",
      "3": "ü≠°",
      "4": "ü≠Ö",
      "5": "2",
      "6": "ü≠°",
      "7": "ü≠Ö",
      "8": "3",
      "9": "ü≠°",
      "10": "ü≠Ö",
      "11": "4",
      "12": "ü≠°",
      "13": "ü≠Ö",
      "14": "5",
      "15": "ü≠°"
    }
  },
  "custom/playerctl": {
    "interval": 1,
    "format": "<span>{}</span>",
    "return-type": "json",
    "max-length": 25,
    "exec": "bash ~/.config/waybar/scripts/music.sh --title",
    "tooltip-format": "12345"
  },
  "custom/uptime": {
    "format": "Ôë£ {}",
    "interval": 30,
    "exec": "bash ~/.config/waybar/scripts/uptime.sh",
    "on-click": "",
  },
  "custom/play": {
    "interval": 1,
    "format": " <span>{icon}</span>",
    "return-type": "json",
    "exec": "bash ~/.config/waybar/scripts/music.sh --status",
    "on-click": "playerctl play-pause",
    "format-icons": {
      "Playing": "Ôäã ",
      "Paused": "ÔÖÑ "
    }
  },
  "custom/next": {
    "format": "Û∞í≠",
    "return-type": "json",
    "on-click": "playerctl next"
  },
  "custom/previous": {
    "format": " Û∞íÆ",
    "return-type": "json",
    "on-click": "playerctl previous"
  },
  "group/playerctl": {
    "orientation": "horizontal",
    "drawer": {
      "transition-left-to-right": true
    },
    "modules": [
      "custom/playerctl",
      "custom/previous",
      "custom/play",
      "custom/next"
    ]
  },
  "custom/clock": {
    "exec": "date +'%-I:%M %p'",
    "interval": 1,
    "format": "{} "
  },
  "custom/date": {
    "exec": "date +'Û∞∏ó %d-%m'",
    "interval": 5,
    "format": "{}"
  },
  "cpu": {
    "interval": 10,
    "format": "ÔÉÉ {usage}%",
    "max-length": 10,
    "on-click": "htop"
  },
  "memory": {
    "interval": 30,
    "format": "Óà¥ {}%",
    "format-alt": "Ôë≤ {used:0.1f}G",
    "max-length": 10,
    "on-click-right": "htop"
  },
  "backlight": {
    "device": "amdgpu_bl1",
    "format": "{icon} {percent}",
    "tooltip": false,
    "on-click": "exec ~/.config/eww/launch_brightness.sh",
    "format-icons": [
      "Óéç",
      "Óèì",
      "Óèë",
      "Óèè",
      "Óèé",
      "Óèç",
      "Óèä",
      "Óèà",
      "Óéõ"
    ]
  },
  "custom/weather": {
    "interval": 30,
    "exec": "echo \"$(exec ~/.config/scripts/weather_info --small)\" ",
    "format": "{}"
  },
  "group/backlight": {
    "orientation": "horizontal",
    "modules": [
      "backlight"
    ],
    "in-height": 20
  },
  "network": {
    "interval": 1,
    "format-wifi": "Û∞í¢ {essid}",
    "format-alt": "{bandwidthUpBytes} ‚åÉ {bandwidthDownBytes} ‚åÑ",
    "format-ethernet": "Ó∞ü wired",
    "tooltip-format": "{essid} {signalStrength}%",
    "format-disconnected": ""
  },
  "pulseaudio": {
    "format": "{icon} <b>{volume}</b>",
    "format-bluetooth": "ÔÄ• {volume}",
    "on-click": "pavucontrol",
    "tooltip": false,
    "format-muted": "Óª®",
    "format-icons": {
      "default": [
        "Û∞ùü",
        "ÔÄß",
        "Û∞ïæ"
      ]
    },
    "on-click-right": "pavucontrol"
  },
  "group/pulseaudio": {
    "orientation": "horizontal",
    "modules": [
      "pulseaudio"
    ]
  },
  "battery": {
    "bat": "BAT0",
    "interval": 10,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "Û∞ÇÑ {capacity}%",
    "format-icons": [
      "Û∞Å∫",
      "Û∞Åª",
      "Û∞Åº",
      "Û∞ÅΩ",
      "Û∞Åæ",
      "Û∞Åø",
      "Û∞ÇÄ",
      "Û∞ÇÅ",
      "Û∞ÇÇ",
      "Û∞Åπ"
    ],
    "tooltip": false
  },
  "group/battery": {
    "orientation": "horizontal",
    "modules": [
      "custom/fillerright",
      "battery",
      "custom/fillerleft"
    ]
  },
  "custom/right-arr": {
    "format": " ÔÅò "
  },
  "custom/launcher": {
    "format": " Û∞£á",
    "on-click": "bash $HOME/.config/eww/launch.sh",
    "tooltip-format": "Powermenu"
  },
  "custom/shutdown": {
    "format": " ÔÄë ",
    "on-click": "systemctl poweroff"
  },
  "custom/reboot": {
    "format": "Ó´í ",
    "on-click": "systemctl reboot"
  },
  "custom/sleep": {
    "format": "ÔÜÜ ",
    "on-click": "mpc -q pause ;systemctl suspend"
  },
  "custom/logout": {
    "format": "Û∞çÉ ",
    "on-click": "killall -9 Hyprland"
  },
  "custom/lock": {
    "format": "Ôëñ ",
    "on-click": "hyprlock"
  },
  "group/power": {
    "orientation": "horizontal",
    "drawer": {
      "transition-left-to-right": true
    },
    "modules": [
      "custom/launcher",
      "custom/shutdown",
      "custom/reboot",
      "custom/lock",
      "custom/sleep",
      "custom/logout"
    ]
  },
  "custom/fillerleft": {
    "format": "ü≠Ö"
  },
  "custom/fillerright": {
    "format": "ü≠°"
  },
  // Quicklinks
  "custom/pkgicon": {
    "format": "Û∞èó ",
    "on-click": "kitty -e sudo pacman -Syu"
  },
  "custom/package": {
    "interval": 30,
    "exec": "~/.config/waybar/scripts/checkupdates | wc -l",
    "on-click": "kitty -e sudo pacman -Syu",
    "format": "{}"
  },
  "group/pkg": {
    "orientation": "horizontal",
    "modules": [
      "custom/pkgicon",
      "custom/package"
    ]
  },
  "temperature": {
    "thermal-zone": 0,
    "critical-threshold": 80,
    "format-critical": " {temperatureC}¬∞C",
    "format": "Ôãä {temperatureC}¬∞C"
  },
  "disk": {
    "interval": 1,
    "path": "/home",
    "format": "ÔÇ† {percentage_used}%",
    "on-click": "filelight /",
    "on-click-right": "filelight /home/"
  }
}
